<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">

    <!-- Word Hint TextView -->

    <!-- TextView for displaying blanks -->
    <TextView
        android:id="@+id/textViewHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Word Hint:"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewBlanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text=""
        android:textColor="@android:color/black"/>

    <!-- EditText for user letter input -->
    <EditText
        android:id="@+id/editTextLetterInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:capitalize="characters"
        android:hint="Enter a letter"
        android:maxLength="1"
        android:padding="16dp"
        android:textColor="@android:color/black" />

    <!-- EditText for final word input -->
    <EditText
        android:id="@+id/editTextFinalAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:capitalize="characters"
        android:hint="Enter the final word"
        android:padding="16dp"
        android:textColor="@android:color/black" />

    <!-- Horizontal LinearLayout for buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Button for submitting letter input -->

        <!-- Button for submitting final answer -->
        <Button
            android:id="@+id/buttonSubmitLetter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/orange"
            android:text="Submit Letter"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonSubmitFinal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Submit Final Answer"
            android:textColor="@android:color/white"
            android:background="@color/orange"/>

    </LinearLayout>

    <!-- Text Counter for remaining attempts -->
    <TextView
        android:id="@+id/textViewAttempts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Attempts Left: 5"
        android:textColor="@android:color/black"/>

</LinearLayout>
